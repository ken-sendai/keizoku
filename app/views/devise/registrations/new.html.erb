
<div class="text-center">
<h2>新規登録</h2><br>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">

    <%= f.label :email %><br />
    <div class="row">
      <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-3 col-xs-6">
        <%= f.email_field :email, autofocus: true, class: "input form-control" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字小文字)</em>
    <% end %><br />
    <div class="row">
      <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-3 col-xs-6">
        <%= f.password_field :password, autocomplete: "off", class: "input form-control" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <div class="row">
      <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-3 col-xs-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input form-control" %>
      </div>
    </div>
  </div><br>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-info" %>
  </div>
<% end %><br>

<%= render "devise/shared/links" %>

</div>

